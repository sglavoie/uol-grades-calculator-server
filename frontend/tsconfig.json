{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "build"
  },
  "paths": {
    "@lib/*": [
      "lib/*"
    ],
    "@utils/*": [
      "utils/*"
    ],
    "@config/*": [
      "config/*"
    ],
    "@assets/*": [
      "assets/*"
    ],
    "@components/*": [
      "components/*"
    ],
  },
  "include": [
    "react-app-env.d.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
  ]
}
